<Window x:Class="ECLIPSE_V3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ECLIPSE — Skin Lesion Classifier"
        Height="760" Width="1200"
        MinHeight="520" MinWidth="920"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.Resources>
        <!-- Colors: can be toggled at runtime -->
        <Color x:Key="AccentColor">#04B2D9</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

        <SolidColorBrush x:Key="CardBgBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="TextMuted" Color="#6B7280"/>
        <SolidColorBrush x:Key="TextTitle" Color="#111827"/>
        <SolidColorBrush x:Key="BgOverlay" Color="#50000000"/>

        <!-- Card (rounded + shadow) -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="14"/>
            <Setter Property="Background" Value="{StaticResource CardBgBrush}"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="16" ShadowDepth="5" Color="#22000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button (rounded) -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btnBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#0494BB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btnBorder" Property="Background" Value="#037B9B"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="btnBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary button -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#E5E7EB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="secBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="#D1D5DB"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="8,4"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="secBorder" Property="Background" Value="#DDE7EA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="secBorder" Property="Background" Value="#C8DEE2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="secBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <!-- Background image -->
        <Image Name="BackgroundImage" Stretch="UniformToFill" Opacity="0.75"/>
        <Rectangle Fill="{StaticResource BgOverlay}"/>

        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="160"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Banner -->
            <Border Grid.Row="0" CornerRadius="18" Margin="0,0,0,18" ClipToBounds="True">
                <Grid>
                    <Rectangle x:Name="BannerRect" RadiusX="18" RadiusY="18" SnapsToDevicePixels="True"/>
                    <Rectangle Fill="#30000000" RadiusX="18" RadiusY="18"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                        <TextBlock Text="ECLIPSE" FontSize="36" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="  — Skin Lesion Classifier" FontSize="16" Foreground="#E0E0E0" VerticalAlignment="Bottom" Margin="6,0,0,4"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="460" MinWidth="320"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*" MinWidth="420"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT CARD -->
                <Border Grid.Column="0" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Image" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextTitle}" Margin="0,0,0,8"/>

                        <!-- Preview area: accept drag/drop -->
                        <Border Grid.Row="1" Background="#F3F4F6" CornerRadius="10" Padding="8" Margin="0,0,0,8"
                                AllowDrop="True" Drop="PreviewArea_Drop" DragEnter="PreviewArea_DragEnter" DragLeave="PreviewArea_DragLeave">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <Grid>
                                    <Image Name="PreviewImage" Stretch="Uniform" MaxHeight="520" Opacity="1" />
                                    <TextBlock Name="DragHint" Text="Drag and Drop an image here or click Load Image" IsHitTestVisible="False"
                                               HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#8A8A8A" Visibility="Collapsed"/>
                                </Grid>
                            </ScrollViewer>
                        </Border>

                        <WrapPanel Grid.Row="2" HorizontalAlignment="Left" Margin="0,6,0,0">
                            <Button x:Name="BtnLoadImage" Content="Load Image" Style="{StaticResource PrimaryButton}" Margin="0,0,10,0" Click="BtnLoadImage_Click"/>
                            <Button x:Name="BtnPredict" Content="Predict" Style="{StaticResource PrimaryButton}" Click="BtnPredict_Click" IsEnabled="False" Margin="0,0,10,0"/>
                            <Button x:Name="BtnExport" Content="Export CSV" Style="{StaticResource SecondaryButton}" Click="BtnExport_Click" ToolTip="Export last prediction" />
                        </WrapPanel>
                    </Grid>
                </Border>

                <GridSplitter Grid.Column="1" Width="6" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="Transparent" ShowsPreview="True"/>

                <!-- RIGHT CARD -->
                <Border Grid.Column="2" Style="{StaticResource Card}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="180"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                            <TextBlock Text="Prediction" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextTitle}" Margin="0,0,0,8"/>
                        </StackPanel>

                        <!-- Charts and list split -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="360"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left: Bar chart (LiveCharts) -->
                            <Border Grid.Column="0" Background="Transparent" Padding="6">
                                <lvc:CartesianChart x:Name="BarChart" LegendLocation="Right" Hoverable="True" >
                                    <lvc:CartesianChart.AxisX>
                                        <lvc:Axis Title="Class" LabelsRotation="0" />
                                    </lvc:CartesianChart.AxisX>
                                    <lvc:CartesianChart.AxisY>
                                        <lvc:Axis Title="Probability (%)" LabelFormatter="{Binding PercentFormatter}"/>
                                    </lvc:CartesianChart.AxisY>
                                </lvc:CartesianChart>
                            </Border>

                            <!-- Right: Pie chart + top3 -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <lvc:PieChart x:Name="PieChart" Height="180" LegendLocation="Bottom" />
                                <TextBlock Text="Top-3" FontWeight="Bold" Margin="4,8,0,4"/>
                                <Border Background="Transparent" MinHeight="90" MaxHeight="220">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                        <ItemsControl x:Name="TopList" ItemsSource="{Binding TopPredictions}" Margin="0">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal" Margin="0,2" Width="320">
                                                        <TextBlock Text="{Binding Label, Mode=OneWay}" Width="170" TextWrapping="Wrap"/>
                                                        <TextBlock Text="{Binding PercentageText, Mode=OneWay}" Width="60" HorizontalAlignment="Right"/>
                                                        <ProgressBar Value="{Binding Percentage, Mode=OneWay}" Maximum="100" Width="70" Height="12" Margin="8,0,0,0"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <!-- Log / controls -->
                        <Border Grid.Row="2" Background="#F8FAFC" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1" Margin="0,8,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="160"/>
                                </Grid.ColumnDefinitions>

                                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Column="0">
                                    <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap" FontSize="12" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextMuted}" Padding="10"/>
                                </ScrollViewer>

                                <StackPanel Grid.Column="1" Margin="8" VerticalAlignment="Top">
                                    <ProgressBar x:Name="PredictProgress" Height="20" IsIndeterminate="True" Visibility="Collapsed" Margin="0,0,0,10"/>
                                    <Button Content="Clear Log" Click="BtnClearLog_Click" Style="{StaticResource SecondaryButton}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

            </Grid>
        </Grid>
    </Grid>
</Window>
