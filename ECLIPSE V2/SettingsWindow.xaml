<Window x:Class="ECLIPSE_V2.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="320" Width="560" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,4">
            <TextBlock Text="Model path:" Width="90" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtModel" Width="380"/>
            <Button Content="Browse" Click="BtnBrowseModel_Click" Margin="6,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,8">
            <TextBlock Text="Banner:" Width="90" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtBanner" Width="380"/>
            <Button Content="Browse" Click="BtnBrowseBanner_Click" Margin="6,0,0,0"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8">
            <TextBlock Text="Background:" Width="90" VerticalAlignment="Center"/>
            <TextBox x:Name="TxtBackground" Width="380"/>
            <Button Content="Browse" Click="BtnBrowseBackground_Click" Margin="6,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="90" Click="BtnOk_Click" Margin="6,0,0,0"/>
            <Button Content="Cancel" Width="90" Click="BtnCancel_Click" Margin="6,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
